@using TheProject.Core.Models.Course
@model IEnumerable<CourseViewModel>

@{
    ViewBag.Title = "My courses";
}

<div class="text-center row">
    @foreach (var course in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" style="width: 18rem;" src="@course.ImageUrl" alt="Course Image">

            <div class="card-body">
                <h5 class="card-title mt-1">@course.Title</h5>
                <p class="mb-0">Organiser: @course.Instructor.FirstName @course.Instructor.LastName</p>
                <p class="mb-0">Interested: @(course.Interested)</p>
                <p>Category: @course.Category</p>
            </div>

            <a class="input-group-sm" asp-route-courseId="@course.Id" asp-controller="Course" asp-action="Details">
                <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
            </a>

            <form class="input-group-sm" asp-controller="Course" asp-action="Leave" asp-route-courseId="@course.Id">
                <input type="submit" value="Leave" class="fs-6 btn btn-danger mb-3 p-2" />
            </form>
        </div>
    }
</div>