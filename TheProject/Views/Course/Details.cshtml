@model TheProject.Core.Models.Course.CourseViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="row">
                <!-- Course Image -->
                <div class="col-md-6">
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded">
                </div>
                
                <!-- Course Details -->
                <div class="col-md-6">
                    <h2>@Model.Title</h2>
                    <p><strong>Instructor:</strong>
                        <a asp-area="" asp-controller="Instructor" asp-action="Info" asp-route-instructorId="@Model.Instructor.Id" class="text-decoration-none instructor-link" title="Click to view more about @Model.Instructor.FirstName @Model.Instructor.LastName">
                            @Model.Instructor.FirstName @Model.Instructor.LastName
                        </a>
                    </p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Start Date:</strong> @Model.StartDate</p>
                    <p><strong>End Date:</strong> @Model.EndDate</p>
                    <p><strong>Category:</strong> @Model.Category</p>
                    <p><strong>Interested:</strong> @Model.Interested</p>
                </div>
            </div>
            
            <!-- Course Actions -->
            @if (User?.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="mt-3">
                    <form asp-controller="Course" asp-action="Join" asp-route-courseId="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-success">Join</button>
                    </form>
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-area="admin" asp-controller="Course" asp-action="Edit" asp-route-courseId="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-area="admin" asp-controller="Course" asp-action="Delete" asp-route-courseId="@Model.Id" class="btn btn-danger">Delete</a>
                    }
                </div>
            }
            
            <!-- Reviews Section -->
            <div class="mt-4">
                <h3>Anonymous Reviews</h3>
                @if (Model.Reviews.Any())
                {
                    <div class="reviews-section">
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="review-rating d-flex align-items-center mb-2">
                                        <span class="me-2">Rating: @review.Rating</span>
                                    </div>
                                    <p class="review-description">Review: @review.Description</p>
                                </div>
                            </div>
                        }
                    </div>
                    }
                    else
                    {
                        <p>No reviews yet.</p>
                    }
            </div>
            <div class="review-form mt-4">
                <h4>Leave a Review</h4>
                <form asp-controller="Review" asp-action="Create" method="post">
                    <input type="hidden" asp-for="@Model.Id" name="courseId" />

                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <select class="form-select" id="rating" name="Rating" required>
                            <option value="">Choose a rating</option>
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Review</label>
                        <textarea class="form-control" id="description" name="Description" rows="3" required placeholder="Your review here..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Post Review</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .instructor-link:hover, .instructor-link:focus {
        text-decoration: underline;
        color: #007bff;
        cursor: pointer;
    }
</style>
