@using TheProject.Core.Models.Lecture
@using TheProject.Core.Models.Review
@model CourseViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <section class="mb-5">
                <div class="container py-4">
                    <div class="row g-4 align-items-center">
                        <h1 class="dispaly-3">@Model.Title</h1>
                        <div class="col-lg-6">
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow">
                        </div>

                        <div class="col-lg-6">
                            <p class="lead">
                                <strong>Instructor:</strong>
                                <a asp-area="" asp-controller="Instructor" asp-action="Info" asp-route-instructorId="@Model.Instructor.Id" class="text-decoration-none instructor-link" title="Click to view more about @Model.Instructor.FirstName @Model.Instructor.LastName">
                                    @Model.Instructor.FirstName @Model.Instructor.LastName
                                </a>
                            </p>
                            <p class="text-wrap" style="max-width: 100%;"><strong>Description:</strong> @Model.Description</p>
                            <p><strong>Start Date:</strong> @Model.StartDate</p>
                            <p><strong>End Date:</strong> @Model.EndDate</p>
                            <p><strong>Category:</strong> @Model.Category</p>
                            <p><strong>Participants: </strong> @Model.Interested</p>
                            <div class="mt-4">
                                <form asp-controller="Course" asp-action="Join" asp-route-courseId="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success me-2">Join Course</button>
                                </form>
                                @if (User?.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                {
                                    <a asp-area="admin" asp-controller="Course" asp-action="Edit" asp-route-courseId="@Model.Id" class="btn btn-warning me-2">Edit</a>
                                    <a asp-area="admin" asp-controller="Course" asp-action="Delete" asp-route-courseId="@Model.Id" class="btn btn-danger">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="mb-5">
                <h3 class="mb-4 pb-2">Lectures</h3>
                @if (Model.Lectures.Any())
                {
                    <div class="accordion" id="lectureAccordion">
                        @foreach (var lecture in Model.Lectures)
                        {
                            var lectureId = lecture.Id.ToString();
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="@($"heading{lectureId}")" lectureId="@lectureId">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse{lectureId}")" aria-expanded="false" aria-controls="@($"collapse{lectureId}")">
                                        @lecture.Title
                                    </button>
                                </h2>
                                <div id="@($"collapse{lectureId}")" class="accordion-collapse collapse" aria-labelledby="@($"heading{lectureId}")" data-bs-parent="#lectureAccordion">
                                    <div class="accordion-body bg-light p-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <div class="mb-2">
                                                    <strong>Starts: </strong> <p class="text-muted d-inline">@lecture.StartDate</p>
                                                </div>
                                                <div class="mb-2">
                                                    <strong>Duration: </strong> <p class="d-inline">@lecture.Duration minutes</p>
                                                </div>
                                                <p class="mb-0">@lecture.Description</p>
                                            </div>
                                            <div class="d-flex flex-column align-items-center">
                                                <a href="#" class="btn btn-primary btn-circle-sm rounded-circle" style="margin-bottom: 1px">
                                                    <i style="padding-left: 0.2em" class="fas fa-play"></i>
                                                </a>
                                                @if (User?.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                                {
                                                <form asp-area="admin" asp-controller="Lecture" asp-action="Delete" asp-route-lectureId="@lecture.Id" method="post" class="d-inline" style="margin-top: 1px">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@lecture.Id" />
                                                    <button type="submit" class="btn btn-danger btn-circle-sm rounded-circle" onclick="return confirm('Are you sure you want to delete this lecture?');" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>    
                                                </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        No lectures available for this course yet.
                    </div>
                }
            </section>

            @if (User?.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
            {
                <partial name="_AddLectureForm" model="new LectureViewModel { CourseId = Model.Id }" />
            }
            @if (TempData["LectureErrorMessages"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(TempData["LectureErrorMessages"].ToString())
                </div>
            }

            <hr />
            <h3 class="mb-3">Course Reviews</h3>
            <div class="reviews-section">
                @if (Model.Reviews.Any())
                {
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card mb-3 shadow">
                            <div class="card-body">
                                <h5 class="card-title d-flex justify-content-between align-items-center">
                                    <span>User: @review.Username</span>
                                    <span class="badge rounded-pill bg-info text-dark">@review.Rating <i class="bi bi-star-fill"></i></span>
                                </h5>
                                <p class="card-text">@review.Description</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        No reviews yet. Be the first to review!
                    </div>
                }
            </div>
            @if (User?.Identity != null && User.Identity.IsAuthenticated && (User.IsInRole("admin") || User.IsInRole("user")))
            {
                <partial name="_AddReviewForm" model="new ReviewViewModel { CourseId = Model.Id }" />
            }
            @if (TempData["ReviewErrorMessages"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(TempData["ReviewErrorMessages"].ToString())
                </div>
            }
        </div>
    </div>
</div>

<style src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
    .instructor-link:hover, .instructor-link:focus {
        text-decoration: underline;
        color: #007bff;
        cursor: pointer;
    }
</style>
