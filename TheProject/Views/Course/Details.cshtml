@model TheProject.Core.Models.Course.CourseViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="card-img-top">
                <div class="card-body">
                    <h2 class="card-title text-center">@Model.Title</h2>
                    <p class="card-text">
                        <strong>Instructor:</strong>
                        <a asp-area="" asp-controller="Instructor" asp-action="Info" asp-route-instructorId="@Model.Instructor.Id" class="text-decoration-none instructor-link" title="Click to view more about @Model.Instructor.FirstName @Model.Instructor.LastName">
                            @Model.Instructor.FirstName @Model.Instructor.LastName
                        </a>
                    </p>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Start Date:</strong> @Model.StartDate</p>
                    <p class="card-text"><strong>End Date:</strong> @Model.EndDate</p>
                    <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                    <p class="card-text"><strong>Interested:</strong> @Model.Interested</p>
                    @if (User?.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Course" asp-action="Join" asp-route-courseId="@Model.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-success mb-2">Join</button>
                        </form>
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-area="admin" asp-controller="Course" asp-action="Edit" asp-route-courseId="@Model.Id" class="btn btn-warning mb-2">Edit</a>
                            <a asp-area="admin" asp-controller="Course" asp-action="Delete" asp-route-courseId="@Model.Id" class="btn btn-danger mb-2">Delete</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .instructor-link:hover, .instructor-link:focus {
        text-decoration: underline;
        color: #007bff;
        cursor: pointer;
    }
</style>
