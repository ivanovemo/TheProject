@model CourseViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="container py-4">
                <div class="row g-4 align-items-center">
                    <h1 class="display-5">@Model.Title</h1>
                    <div class="col-lg-4">
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow">
                    </div>

                    <div class="col-lg-4">
                        <p class="lead">
                            <strong>Instructor:</strong>
                            <a asp-area="" asp-controller="Instructor" asp-action="Info" asp-route-instructorId="@Model.Instructor.Id" class="text-decoration-none instructor-link" title="Click to view more about @Model.Instructor.FirstName @Model.Instructor.LastName">
                                @Model.Instructor.FirstName @Model.Instructor.LastName
                            </a>
                        </p>
                        <p class="text-wrap" style="max-width: 100%;"><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Start Date:</strong> @Model.StartDate</p>
                        <p><strong>End Date:</strong> @Model.EndDate</p>
                        <p><strong>Category:</strong> @Model.Category</p>
                        <p><strong>Participants: </strong> @Model.Interested</p>
                        <div class="mt-4">
                            <form asp-controller="Course" asp-action="Join" asp-route-courseId="@Model.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-success me-2">Join Course</button>
                            </form>
                            @if (User?.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
                            {
                                <a asp-area="admin" asp-controller="Course" asp-action="Edit" asp-route-courseId="@Model.Id" class="btn btn-warning me-2">Edit</a>
                                <a asp-area="admin" asp-controller="Course" asp-action="Delete" asp-route-courseId="@Model.Id" class="btn btn-danger">Delete</a>
                            }
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <h3>Lectures</h3>
                        @if (Model.Lectures.Any())
                        {
                            <div class="list-group">
                                @foreach (var lecture in Model.Lectures)
                                {
                                    <a class="list-group-item list-group-item-action">
                                        <h5 class="mb-1">@lecture.Title</h5>
                                        <small>Starts: @lecture.StartDate</small>
                                        <p class="mb-1">@lecture.Description</p>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <p>No lectures available for this course yet.</p>
                        }
                    </div>
                </div>
            </div>
            <h3 class="mb-3">Course Reviews</h3>
            <div class="reviews-section">
                @if (Model.Reviews.Any())
                {
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card mb-3 shadow">
                            <div class="card-body">
                                <h5 class="card-title d-flex justify-content-between align-items-center">
                                    <span>User: @review.Username</span>
                                    <span class="badge rounded-pill bg-info text-dark">@review.Rating <i class="bi bi-star-fill"></i></span>
                                </h5>
                                <p class="card-text">@review.Description</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No reviews yet. Be the first to review!</p>
                }
            </div>
            @if (User?.Identity != null && User.Identity.IsAuthenticated && (User.IsInRole("admin") || User.IsInRole("user")))
            {
                <div class="review-form mt-5">
                    <h4>Leave a Review</h4>
                    <form asp-controller="Review" asp-action="Create" method="post">
                        <input type="hidden" asp-for="@Model.Id" name="courseId" />
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <select class="form-select" id="rating" name="Rating" required>
                                <option value="">Choose a rating</option>
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Your Review</label>
                            <textarea class="form-control" id="description" name="Description" rows="3" required placeholder="Share your experience..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .instructor-link:hover, .instructor-link:focus {
        text-decoration: underline;
        color: #007bff;
        cursor: pointer;
    }
</style>
