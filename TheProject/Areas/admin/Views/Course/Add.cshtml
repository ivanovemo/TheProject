@model CourseViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Course";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="Add" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <h4 class="mb-3"><i class="fas fa-info-circle"></i> Course Details</h4>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Title" class="form-label">Course Title <span class="text-danger">*</span></label>
                    <input asp-for="@Model.Title" class="form-control" placeholder="Enter course title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.ImageUrl" class="form-label">Image URL <span class="text-danger">*</span></label>
                    <input asp-for="@Model.ImageUrl" class="form-control" placeholder="http://example.com/image.jpg">
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="@Model.StartDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                        <input asp-for="@Model.StartDate" class="form-control" placeholder="DD/MM/YYYY">
                        <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="@Model.EndDate" class="form-label">End Date <span class="text-danger">*</span></label>
                        <input asp-for="@Model.EndDate" class="form-control" placeholder="DD/MM/YYYY">
                        <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description <span class="text-danger">*</span></label>
                    <textarea asp-for="@Model.Description" class="form-control" rows="5" placeholder="Course description"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label">Category <span class="text-danger">*</span></label>
                    <select asp-for="@Model.CategoryId" class="form-select">
                        <option value="">Select a category</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                </div>
                <h4 class="mb-3"><i class="fas fa-chalkboard-teacher"></i> Instructor Details</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="@Model.Instructor.FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                        <input asp-for="@Model.Instructor.FirstName" class="form-control" placeholder="Enter first name">
                        <span asp-validation-for="@Model.Instructor.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="@Model.Instructor.LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                        <input asp-for="@Model.Instructor.LastName" class="form-control" placeholder="Enter last name">
                        <span asp-validation-for="@Model.Instructor.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Instructor.Photo" class="form-label">Photo URL <span class="text-danger">*</span></label>
                    <input asp-for="@Model.Instructor.Photo" class="form-control" placeholder="http://example.com/photo.jpg">
                    <span asp-validation-for="@Model.Instructor.Photo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Instructor.Bio" class="form-label">Bio <span class="text-danger">*</span></label>
                    <textarea asp-for="@Model.Instructor.Bio" class="form-control" rows="3" placeholder="Brief bio"></textarea>
                    <span asp-validation-for="@Model.Instructor.Bio" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Add Course</button>
                    <a asp-area="" asp-controller="Course" asp-action="All" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}