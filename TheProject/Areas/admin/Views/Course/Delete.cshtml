@model CourseViewModel

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/FinalProject.styles.css" asp-append-version="true" />

@{
    Layout = "_Layout";
    ViewBag.Title = "Delete Course";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label>Instructor First Name</label>
                <input value="@Model.Instructor.FirstName" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label>Instructor Last Name</label>
                <input value="@Model.Instructor.LastName" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label>Course Image</label>
                <input asp-for="ImageUrl" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="form-label">Start date</label>
                <input asp-for="StartDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="form-label">End date</label>
                <input asp-for="EndDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" readonly></textarea>
            </div>
            <div class="text-center">
                <div class="text-center">
                    <form asp-area="admin" asp-controller="Course" asp-action="Delete" method="post">
                        <input type="hidden" name="courseId" value="@Model.Id" />
                        <button class="btn btn-danger mt-3" type="submit">
                            Confirm Delete
                        </button>
                    </form>
                    <a asp-area="" asp-action="All" asp-controller="Course" class="btn btn-secondary mt-3">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
